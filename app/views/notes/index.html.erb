<p id="notice"><%= notice %></p>
<center>
  <h2>Listing all notes</h2>
    <% @notes.each do |note| %>
       <div class= "note">
         <h3><%= note.title%></h3>
         <% unless note.all_tags.empty? %>
          <h4><% note.all_tags.split(",").each do |x| %>
               <%= link_to x, tag_path(x) %><small>(<%= Tag.note_count(x)%>)</small>
              <% end %>
          </h4>
        <% end %>
         <%= link_to 'Read', note %> | 
         <%= link_to 'Edit', edit_note_path(note) %> | 
         <%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %> <br>
       </div>
    <% end %>
</center>